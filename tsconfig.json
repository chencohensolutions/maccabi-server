{
    "compilerOptions": {
      "sourceMap": true,
      "noEmitOnError": true,
      "resolveJsonModule": true,
      "target": "ES6",
      "module": "commonjs",
      "outDir": "./dist",
      "rootDir": "./src",
      "strict": true,
      "esModuleInterop": true,
      "skipLibCheck": true
    },
    "include": ["src/**/*", "src/**/*.json"],
    "exclude": ["node_modules"]
  }